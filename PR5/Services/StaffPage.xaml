<Page x:Class="PR5.Services.StaffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="900"
      Title="Список сотрудников">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button Content="Добавить сотрудника" Width="200" Margin="5" Click="AddButton_Click"/>
        </StackPanel>

        <!-- Красивый список в виде карточек -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="StaffListView" ItemsSource="{Binding}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="250" Height="280" Margin="10" 
                                BorderThickness="1" CornerRadius="10" 
                                BorderBrush="#FFCCCCCC" 
                                Background="#FFF5F5F5">
                            <StackPanel Margin="10">
                                <!-- Фото профиля -->
                                <Image Source="/Resources/profile_icon.png" 
                                       Width="80" Height="80" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>

                                <!-- ФИО -->
                                <TextBlock Text="{Binding User.FullName}" 
                                           FontWeight="Bold" 
                                           TextAlignment="Center"
                                           Margin="0,0,0,5"
                                           TextWrapping="Wrap"
                                           FontSize="14"/>

                                <!-- Должность -->
                                <TextBlock Text="{Binding PostTitle}" 
                                           Foreground="#FF555555"
                                           TextAlignment="Center"
                                           Margin="0,0,0,5"
                                           FontSize="12"/>

                                <!-- Дата рождения -->
                                <TextBlock Text="{Binding User.Birthday, StringFormat='Дата рождения: {0:dd.MM.yyyy}'}" 
                                           TextAlignment="Center"
                                           Margin="0,0,0,5"
                                           FontSize="12"/>

                                <!-- Телефон -->
                                <TextBlock Text="{Binding User.Phone, StringFormat='Тел.: {0}'}" 
                                           TextAlignment="Center"
                                           Margin="0,0,0,5"
                                           FontSize="12"/>

                                <!-- Почта -->
                                <TextBlock Text="{Binding User.Mail, StringFormat='Email: {0}'}" 
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>